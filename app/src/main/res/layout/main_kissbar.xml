<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/kiss_green"
                android:clipToPadding="false"
                android:elevation="2dp">

        <ImageView
            android:id="@+id/favorite0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:onClick="onFavoriteButtonClicked"
            android:src="@drawable/ic_contact"
            android:tag="0"
            />

        <ImageView
            android:id="@+id/favorite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="15dp"
            android:layout_above="@id/favorite0"
            android:contentDescription="@null"
            android:onClick="onFavoriteButtonClicked"
            android:src="@drawable/ic_contact"
            android:tag="1"/>

        <ImageView
            android:id="@+id/favorite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginRight="15dp"
            android:layout_above="@id/favorite1"
            android:contentDescription="@null"
            android:onClick="onFavoriteButtonClicked"
            android:src="@drawable/ic_contact"
            android:tag="2"/>

        <ImageView
            android:id="@+id/favorite3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/favorite2"
            android:contentDescription="@null"
            android:onClick="onFavoriteButtonClicked"
            android:src="@drawable/ic_contact"
            android:tag="3"/>

        <ImageView
            android:id="@+id/favorite4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:onClick="onFavoriteButtonClicked"
            android:src="@drawable/ic_contact"
            android:tag="4"/>
</RelativeLayout>