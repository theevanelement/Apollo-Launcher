                android:src="@drawable/ic_contact"
                android:tag="3"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fav_layout_4"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
